<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="70dp"
            android:text="Kayıt Ol"
            android:textColor=" #2B2F31"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/im_back"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:elevation="2dp"
            android:ems="10"
            android:hint="Ad Soyad"
            android:inputType="textPersonName"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_signup" />

        <EditText
            android:id="@+id/et_regemail"
            android:layout_width="0dp"
            android:elevation="2dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name" />

        <EditText
            android:id="@+id/et_regpassword"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:elevation="2dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Sifre"
            android:inputType="textPassword"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_regemail" />

        <Button
            android:id="@+id/bt_registerfire"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Kayit Ol"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:iconTint="#813131"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />


        <ImageView
            android:id="@+id/im_back"
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:elevation="2dp"
            android:ems="10"
            android:hint="Telefon"
            android:inputType="phone"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/et_regpassword"
            app:layout_constraintStart_toStartOf="@+id/et_regpassword"
            app:layout_constraintTop_toBottomOf="@+id/et_regpassword" />

        <TextView
            android:id="@+id/tv_already"
            android:layout_width="174sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="140dp"
            android:text="Zaten bir hesabın var mı?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_registerfire" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Giris Yap"
            app:layout_constraintStart_toEndOf="@+id/tv_already"
            app:layout_constraintTop_toTopOf="@+id/tv_already" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
